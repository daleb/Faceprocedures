<div class="container-fluid">
	<div class="row">

<%if @from=="exit"%>
<div class="col-md-12">
<h1 class="scores text-center">
	<%= "Your Earning is #{@total_score}"%>
</h1>

<%end%>

<h3 class="thanks text-center">
	<%="Thank you for participating, please wait for your name to be called for payment."%>
</h3>
</div>
<div>
  <img src="<%= asset_path 'loader.gif' %>" class="loaderimg" />
</div>

</div>
</div>

<script src='/jquery-2.0.3.min.js'></script>
<script>
$(document).ready(function(){
	$('.thanks').hide();
});

	setTimeout(function() {
		$('.scores').hide();
		$('.thanks').show();
}, 10000);
</script>
