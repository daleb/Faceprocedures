  <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Participant Information</title>
        <link rel="stylesheet" href="css/normalize.css">
        <link href='http://fonts.googleapis.com/css?family=Nunito:400,300' rel='stylesheet' type='text/css'>
        <link rel="stylesheet" href="css/main.css">
    </head>
    <body>
        <h1>Experiment has ended. Please fill out the following form.</h1>
        <%= form_tag 'save_user_info' do %>
        <fieldset>
          <label for="first_name">First Name:</label>
          <input type="text" id="namef" name="first_name">
          <label for="last_name">Last Name:</label>
          <input type="text" id="namel" name="last_name">
          <label>Gender:</label>
          <input type="radio" id="male" value="male" name="user_gender"><label for="gender" class="light" checked="checked">Male</label>
          <input type="radio" id="female" value="female" name="user_gender"><label for="gender" class="light">Female</label>
          <input type="radio" id="other" value="other" name="user_gender"><label for="gender" class="light">Other</label>
        </fieldset>
        
        <fieldset>
          <label for="age">Age:</label>
          <input type="text" id="age" name="user_age">
        </fieldset>
        <fieldset>
        <label for="job">First Language:</label>
        <select id="job" name="user_language">
          
            <option value="english">English</option>
            <option value="other">Other</option>
        </select>
        <!--input type="text" id="language" name="user_language"-->
        
        <label for="job">English Fluency:</label>
        <select id="job" name="user_fluency">
          
            <option value="beginner">Beginner</option>
            <option value="intermediate">Intermediate</option>
            <option value="advanced">Advanced</option>
        </select>
        
        </fieldset>
        <% @current_controller = "participantinfo" %>

    </body>
</html>
<div class="next_btn">
<h3><%= submit_tag "Next" , :id => "submitbutton" %></h3>
</div>
<%end%>

