<script type="text/javascript">
  $("#timevalue").html(<%= $gConfigData.time %>);
  $((function () {
    $("#timebutton").click(function(){
      var currentvalue = $("#timevalue").html();
      var answer = prompt("Enter new time",currentvalue);
      if(answer != null){
        answer = jQuery.trim(answer);
        if(answer != currentvalue){
          changetime(answer);
        }
      }
    });
  })
);


  function changetime(newtime){
    var time = newtime;
    values = "time=" + time;
    alert(values);
    $.ajax({
      url: "/changetime",
      data: values,
      type: 'get',
      success: function(html){
        $("#timevalue").html(newtime);
      }
    });
  }

</script>

